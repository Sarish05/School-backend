{
  "info": {
    "name": "School Backend API",
    "description": "Postman collection for School Backend APIs (addSchool, listSchools)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add School",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Delhi Public School\",\n  \"address\": \"Mathura Road, New Delhi\",\n  \"latitude\": 28.5826,\n  \"longitude\": 77.2517\n}"
        },
        "url": {
          "raw": "{{base_url}}/addSchool",
          "host": ["{{base_url}}"],
          "path": ["addSchool"]
        }
      },
      "response": [
        {
          "name": "Success",
          "originalRequest": {},
          "status": "OK",
          "code": 200,
          "body": "{\n  \"message\": \"School added\",\n  \"id\": 1\n}"
        }
      ]
    },
    {
      "name": "List Schools",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/listSchools?latitude=28.6&longitude=77.2",
          "host": ["{{base_url}}"],
          "path": ["listSchools"],
          "query": [
            { "key": "latitude", "value": "28.6" },
            { "key": "longitude", "value": "77.2" }
          ]
        }
      },
      "response": [
        {
          "name": "Success",
          "originalRequest": {},
          "status": "OK",
          "code": 200,
          "body": "[\n  {\n    \"id\": 1,\n    \"name\": \"Delhi Public School\",\n    \"address\": \"Mathura Road, New Delhi\",\n    \"latitude\": 28.5826,\n    \"longitude\": 77.2517,\n    \"distance\": 0.0\n  }\n]"
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000" }
  ]
}
